<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/MidBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp">

        <LinearLayout
            android:id="@+id/mid_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/Fever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fever"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Sweating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sweating"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWeightLoss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight loss"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coughing_weeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coughing weeks"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fatigue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fatigue"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/coughing_blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coughing blood"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/origination_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Origination"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/revision__date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Revision date"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>



        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textAllCaps="false"
            android:background="@color/havelock"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"/>




    </LinearLayout>


</RelativeLayout>