<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:id="@+id/cdAccountDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/white"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ       abcdefghijklmnopqrstuvwxyz"
                android:ems="10"
                android:hint="Full name"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etIdNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:digits="1234567890"
                android:ems="10"
                android:hint="Id Number"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLines="1"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etRegistryNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:digits="1234567890"
                android:ems="10"
                android:hint="Registry Number"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLines="1"
                android:minHeight="48dp" />


            <EditText
                android:id="@+id/etClinicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ       abcdefghijklmnopqrstuvwxyz"
                android:ems="10"
                android:hint="Clinic name"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etInterviewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:digits="1234567890/-"
                android:ems="10"
                android:hint="Interview date"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:maxLines="1"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ       abcdefghijklmnopqrstuvwxyz"
                android:ems="10"
                android:hint="Gender"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:digits="1234567890"
                android:ems="10"
                android:hint="Phone number"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:maxLines="1"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ       abcdefghijklmnopqrstuvwxyz"
                android:ems="10"
                android:hint="District"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etOriginationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="1234567890/- "
                android:ems="10"
                android:hint="Date of Origination"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:maxLines="1"
                android:minHeight="48dp" />



            <EditText
                android:id="@+id/etLastRevisionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="1234567890/- "
                android:ems="10"
                android:hint="Last Revision Date"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:maxLines="1"
                android:minHeight="48dp" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/publish"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Publish"
        android:layout_marginTop="20dp"
        android:layout_below="@id/cdAccountDetails"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:background="@android:color/holo_blue_light"
        android:layout_marginBottom="16dp"/>





</RelativeLayout>